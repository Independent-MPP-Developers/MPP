{
    "name": "MPP",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Extension for multiplayer piano",
    "icons": {
        "128": "icon (128).png",
        "48": "icon (48).png"
    },
    "permissions": [ "storage" ],
    "content_scripts": [
        {
            "matches": [
                "*://*.mpp.terrium.net/*",
                "*://*.multiplayerpiano.com/*",
                "*://*.multiplayerpiano.net/*",
                "*://*.mppclone.com/*",
                "*://*.mpp.hri7566.info/*"
            ],
            "js": [ "init.js" ]
        }
    ],
    "web_accessible_resources": [ "index.js" ],
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "MPP"
    }
}
